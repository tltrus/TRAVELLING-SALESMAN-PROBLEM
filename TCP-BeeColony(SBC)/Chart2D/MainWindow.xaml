<Window x:Class="_Chart2D.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_Chart2D"
        mc:Ignorable="d"
        Title="Travelling salesman problem / Bee Colony (SBC) from Test Run Microsoft" Width="1100" Height="786">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
            <WrapPanel Grid.Row="0">
                <Button Content="Start timer" x:Name="btnStart" VerticalAlignment="Center" Margin="5" Width="100" Click="btnStart_Click"/>
                <Label Content="Cycle: " VerticalAlignment="Center" Margin="5" />
                <Label Content="0" x:Name="lbTime" VerticalAlignment="Center" Margin="5" />
            </WrapPanel>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <local:DrawingVisualClass Grid.Column="0" x:Name="g" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5" Width="700" Background="#FFFDFDFD" Height="700"/>
            <TextBox Grid.Column="1" Name="rtbConsole" Text="" Margin="5" Background="#FFFDFDFD" Foreground="#FF292929" VerticalAlignment="Stretch" TextWrapping="Wrap"/>
         </Grid>

    </Grid>
</Window>
